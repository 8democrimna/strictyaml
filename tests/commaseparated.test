{% for ruamel_version in ruamel_versions %}
{% for python_version in python_versions %}
- name: Comma separated
  description: |
    Comma-separated values can be validated and parsed
    using the CommaSeparated validator.

    Note that spaces following the commas are stripped by
    default.
  preconditions:
    python_version: {{ python_version }}
    ruamel version: {{ ruamel_version }}
    files:
      valid_sequence.yaml: |
        a: 1, 2, 3
      invalid_sequence.yaml: |
        a: 1, x, 3
  tags:
    - sequence
    - py{{ python_version }}
  scenario:
    - Run command: |
        from strictyaml import CommaSeparated, Int, Str, Map, YAMLValidationError, load

        int_schema = Map({"a": CommaSeparated(Int())})

        str_schema = Map({"a": CommaSeparated(Str())})

    - Assert True: 'load(valid_sequence, int_schema) == {"a": [1, 2, 3]}'

    - Assert True: 'load(valid_sequence, str_schema) == {"a": ["1", "2", "3"]}'

    - Assert exception:
        command: load(invalid_sequence, int_schema)
        exception: |
          when expecting an integer
          found non-integer
            in "<unicode string>", line 1, column 1:
              a: 1, x, 3
               ^
{% endfor %}
{% endfor %}
